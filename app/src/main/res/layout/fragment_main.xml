<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/main_bg" />

    <TextView
        android:id="@+id/temperature_text"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="66dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Temperature"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/temperature_text"
        android:layout_marginTop="17dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Welcome: User"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/temperature_text"
        android:layout_below="@+id/welcome_text"
        android:text="timeTextView"
        android:textColor="#FFFFFF"
        android:textSize="18dip" />

    <ImageView
        android:id="@id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temperature_text"
        android:src="@drawable/happy" />

    <TextView
        android:id="@+id/hourly_usage"
        android:layout_width="305dp"
        android:layout_height="76dp"
        android:layout_alignStart="@+id/temperature_text"
        android:layout_below="@+id/status"
        android:text="Hourly usage"
        android:textColor="#FFFFFF"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/sqliteTextView"
        android:layout_width="302dp"
        android:layout_height="108dp"
        android:layout_alignStart="@+id/temperature_text"
        android:layout_below="@+id/hourly_usage"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/send"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/create"
        android:layout_centerVertical="true"
        android:text="Send Data" />

    <Button
        android:id="@+id/create"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="129dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Create Data" />

</RelativeLayout>